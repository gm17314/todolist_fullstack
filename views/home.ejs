<%- include('./partials/header.ejs') %>

  <h1 class="text-3xl text-center my-2 font-bold text-amber-50">Todo List</h1>

  <form action="/" method="post" class="max-w-md mx-auto my-5">
    <div class="relative z-0 w-full mb-5 group">
      <input type="text" name="title" id="title"
        class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none text-white dark:text-white dark:border-gray-600 dark:focus:border-amber-50 focus:outline-none focus:ring-0 focus:border-amber-50  peer"
        placeholder=" " required />
      <label for="title"
        class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-amber-50  peer-focus:dark:text-amber-50  peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Title</label>
    </div>
    <div class="relative z-0 w-full mb-5 group">
      <textarea rows="3" type="text" name="description" id="description"
        class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none text-white dark:text-white dark:border-gray-600 dark:focus:border-amber-50  focus:outline-none focus:ring-0 focus:border-amber-50  peer"
        placeholder=" " required></textarea>
      <label for="description"
        class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-amber-50  peer-focus:dark:text-amber-50 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Description</label>
    </div>

    <button type="submit"
      class="text-white bg-gradient-to-r from-cyan-500 to-blue-500 hover:bg-gradient-to-bl focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 text-center block mx-auto">Add</button>
  </form>


  <h2 class="text-2xl text-left font-bold text-amber-50 my-5 ml-10">My Todos</h2>

  <div class="mx-5 grid lg:grid-cols-3 grid-cols-1 md:grid-cols-2 justify-items-center gap-6">
    <% for (let todo of todos){ %>
      <div class="w-[300px] p-3 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= todo.title %></h5>
  
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400 dot-text"><%= todo.description %>
        </p>
  
        <div class="flex justify-between">
          <a href="/todos/<%= todo._id %>"
            class="inline-flex px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg">Show</a>
          <a href="/todos/<%= todo._id %>/edit"
            class="inline-flex px-3 py-2 text-sm font-medium text-center text-white bg-yellow-400 rounded-lg">Edit</a>
          <form action="/todos/<%= todo._id %>?_method=delete" method="post"
            class="inline-flex px-3 py-2 text-sm font-medium text-center text-white bg-red-500 rounded-lg">
            <button type="submit">Delete</button>
          </form>
        </div>
      </div>
  
  
    <% } %>
    
    <!--  -->
  </div>

  <%- include('./partials/footer.ejs') %>